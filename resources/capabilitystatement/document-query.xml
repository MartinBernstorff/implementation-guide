            <code value="search-type"/>
         </interaction>
         <searchParam>
            <name value="type"/>
            <type value="token"/>
            <documentation value="Type defined or constrained by this structure"/>
         </searchParam>
      </resource>
      <operation>
         <name value="retrieve-document"/>
         <definition>
            <reference value="https://document-query.devtest.systematic-ehealth.com/fhir/OperationDefinition/Binary--retrieve-document"/>
