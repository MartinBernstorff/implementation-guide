<?xml version="1.0" encoding="UTF-8"?>
<OperationDefinition xmlns="http://hl7.org/fhir" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <id value="ehealth-person-lookup"/>
    <name value="Lookup Person"/>
    <status value="active"/>
    <kind value="operation"/>
    <date value="2019-02-02"/>
    <description value="This operation is used to do a lookup on a citizen in the national infrastructure based on the crn unless the crn can be resolved locally. The operation returns a 'limited' Person resource with the crn and name of the person being the only returned attributes" />
    <code value="lookup"/>
    <resource value="Person"/>
    <system value="false"/>
    <type value="true"/>
    <instance value="false"/>
    <parameter>
        <name value="crn"/>
        <use value="in"/>
        <min value="1"/>
        <max value="1"/>
        <documentation value="The social security number of the person on which this operation is executed."/>
        <type value="Identifier"/>
        <profile>
            <reference value="http://ehealth.sundhed.dk/fhir/StructureDefinition/ehealth-dk-crn-identifier"/>
        </profile>
    </parameter>
    <parameter>
        <name value="return"/>
        <use value="out"/>
        <min value="1"/>
        <max value="1"/>
        <documentation value="The Person resource only carrying the name and Identifier"/>
        <type value="Parameters"/>
    </parameter>
</OperationDefinition>