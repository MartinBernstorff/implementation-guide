<OperationDefinition xmlns="http://hl7.org/fhir">
    <id value="-s-schedule-measurement-stats"/>
    <name value="schedule-measurement-stats"/>
    <status value="active"/>
    <kind value="operation"/>
    <description value="Schedule a report with episodes of care, summarizing counts of observations, media, and questionnaire responses, grouped by episode of care"/>
    <idempotent value="false"/>
    <code value="schedule-measurement-stats"/>
    <system value="true"/>
    <type value="false"/>
    <instance value="false"/>
    <parameter>
        <name value="anonymization"/>
        <use value="in"/>
        <min value="1"/>
        <max value="1"/>
        <type value="string"/>
        <documentation value="Use anonymization mode [NONE, ANONYMIZED]. " />
    </parameter>
    <parameter>
        <name value="organization"/>
        <use value="in"/>
        <min value="0"/>
        <max value="1"/>
        <type value="Reference"/>
        <documentation value="Only episodes of care for organization. " />
    </parameter>
    <parameter>
        <name value="period"/>
        <use value="in"/>
        <min value="0"/>
        <max value="1"/>
        <type value="Period"/>
        <documentation value="Only observations, media, and questionnaire responses within period. " />
    </parameter>
    <parameter>
        <name value="return"/>
        <use value="out"/>
        <min value="0"/>
        <max value="1"/>
        <type value="Binary"/>
        <documentation value="An empty report. When the schedule time has passed, the binary will be updated with the report. " />
    </parameter>
</OperationDefinition>